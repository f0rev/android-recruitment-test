<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="#242435">


    <RelativeLayout
        android:id="@+id/trend_side"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/trend"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/sixth_field"
            fontPath="fonts/SFUltralight.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trend"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#16BEFE"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/first_field"
        fontPath="fonts/SFRegular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/trend_side"
        android:shadowColor="#86633F"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="#FCA32A"
        android:textSize="18sp" />


    <FrameLayout
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="95dp"
        android:layout_toRightOf="@id/trend_side"
        android:background="#2E2F41" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="105dp"
        android:layout_toRightOf="@id/trend_side"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/second_field"
                fontPath="fonts/SFThin.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:shadowColor="#2F619C"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="#11E1FF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/third_field"
                fontPath="fonts/SFThin.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:shadowColor="#2F619C"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="#11E1FF"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fourth_field"
                fontPath="fonts/SFThin.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:shadowColor="#2F619C"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="#11E1FF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fifthh_field"
                fontPath="fonts/SFThin.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:shadowColor="#2F619C"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="#11E1FF"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/time"
            fontPath="fonts/SFRegular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:padding="2dp"

            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:shadowColor="#9E713B"
            android:textColor="#FCC630"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/date"
            fontPath="fonts/SFThin.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:padding="2dp"
            android:shadowColor="#8A8B93"
            android:textColor="#F9F9FA"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#2F3652" />

</RelativeLayout>